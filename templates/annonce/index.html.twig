{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!{% endblock %}

{% block body %}


<section class="articles" >
{% for article in articles %}
<article style="display:inline-block">
    <hr>
    <h2>{{article.title}}</h2>
    <div class="metadata">ecrit le {{article.createdAt | date('d/m/y')}} a {{article.createdAt | date('h:i')}} </div>
    <div class="content">
        <img src="{{ article.image }}" alt="">
    </br>
       <h3> Prix : {{article.prix| raw}} TND </h3> 
       
        <a href="{{ path('annonce_show',{id:article.id}) }}" class="btn btn-primary">lire la suite</a>
    </div>

</article>
{% endfor %}
</section>
{% endblock %}